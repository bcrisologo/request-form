<!-- /views/forms/edit.ejs-->
<!DOCTYPE html>
<html lang="en">
<head>

	<!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
	
	<!-- Link to CSS file -->
	<link rel="stylesheet" href="/stylesheets/style.css" />
	<title>Edit Request Form</title>
</head>
<body>
	<div class="container-fluid" id="request-edit">
		<h1>Edit Request Form</h1>
		<form action="/forms/update/<%= submissionform._id%>" method="post">
			<div class="form-group row">
				<label class="col-sm-2 col-form-label">First Name</label>
				<div class="col-sm-10">
					<input type="text" name="first_name" class="form-control" value="<%= submissionform.first_name %>" />
				</div>				
			</div>
			<div class="form-group row">
				<label class="col-sm-2 col-form-label">Last Name</label>
				<div class="col-sm-10">
					<input type="text" name="last_name" class="form-control" value="<%= submissionform.last_name %>" />
				</div>
			</div>
			<div class="form-group row">
				<label class="col-sm-2 col-form-label">Phone Number</label>
				<div class="col-sm-10">
					<input type="text" name="phone_number" class="form-control" value="<%= submissionform.phone_number %>" />
				</div>
			</div>
			<div class="form-group row">
				<label class="col-sm-2 col-form-label">Organization</label>
				<div class="col-sm-10">
					<input type="text" name="organization" class="form-control" value="<%= submissionform.organization %>" />
				</div>
			</div>
			<div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
					<button class="btn btn-primary" type="submit" id="update_save">Update</button>
				</div>
			</div>
		</form>
		<div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
				<form action="/forms/">
					<button onclick="return confirm('Are you sure you want to cancel editing <%= submissionform.first_name %> <%= submissionform.last_name %>?')" class="btn btn-primary" id="update_cancel">Cancel</button>
				</form>
			</div>
		</div>
	</div>
</body>
</html>